# Database
DATABASE_URL=postgresql://user:password@localhost:5432/digitalid

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Stripe Keys (get from stripe.com dashboard)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_price_id

# App Config
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# TestFlight
TESTFLIGHT_URL=https://testflight.apple.com/join/YOUR_CODE

# Feature Flags
# Set to 'true' to bypass payment requirement (for early testing)
BYPASS_PAYMENT=true
# Set to 'true' to auto-approve all users (for early testing)
AUTO_APPROVE=true

# Admin Setup
# Secret key required to create the first admin account
# Generate a random string: openssl rand -hex 32
ADMIN_SETUP_KEY=your-secret-admin-setup-key-change-this
